<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/itl"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_below="@+id/splash"
        android:layout_marginTop="45dp"
        android:padding="20dp"
        android:text="ITLScanner"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16pt"
        android:textStyle="bold" />


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="281dp"
        android:layout_height="150dp"
        android:layout_below="@+id/itl"
        android:layout_alignStart="@+id/itl"
        android:layout_alignEnd="@+id/itl"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="45dp"
        android:progressBackgroundTint="@android:color/holo_blue_dark" />

    <ImageView
        android:id="@+id/splash"
        android:layout_width="384dp"
        android:layout_height="328dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="11dp"
        app:srcCompat="@drawable/itl" />

</RelativeLayout>